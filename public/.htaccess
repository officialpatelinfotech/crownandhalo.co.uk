<IfModule mod_php7.c>
  # Fallback for mod_php setups â€” may be ignored by CGI/FPM
  php_value upload_max_filesize 50M
  php_value post_max_size 55M
  php_value memory_limit 256M
  php_value max_execution_time 300
  php_value max_input_time 300
  php_value max_file_uploads 20
</IfModule>

# Standard CodeIgniter rewrite (keeps existing rules working)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  # Send requests to index.php
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
# Clean public/.htaccess - minimal rules for CodeIgniter public folder
<IfModule mod_rewrite.c>
	Options -Indexes
	RewriteEngine On
	DirectoryIndex index.php

	# Redirect Trailing Slashes (avoid duplicate slashes)
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_URI} (.+)/$
	RewriteRule ^ %1 [L,R=301]

	# Remove www (optional)
	RewriteCond %{HTTPS} !=on
	RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
	RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L]

	# If the requested resource doesn't exist, route to index.php
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^ index.php [L]

	# Ensure Authorization header is passed along
	RewriteCond %{HTTP:Authorization} .
	RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

<IfModule !mod_rewrite.c>
	ErrorDocument 404 index.php
</IfModule>

# Server signature off for security
ServerSignature Off
